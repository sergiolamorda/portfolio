---
import '@fontsource/poppins';

import Footer from '../components/Footer.astro';

const MENU_ITEMS = [
  {
    label: 'Inicio',
    link: '#home'
  },
  {
    label: 'Experiencia',
    link: '#experience'
  },
  {
    label: 'Proyectos',
    link: '#projects'
  },
  {
    label: 'Sobre m√≠',
    link: '#about'
  },
  {
    label: 'Contacto',
    link: '#contact'
  },
]

const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sergio Lamorda - Programador FullStack</title>
    <link rel="icon" type="image/x-icon" href="/favicon.png">
  </head>
  <body class="text-white/90 bg-neutral-950">
    <div class="absolute top-0 z-[-2] h-screen w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
    <nav id="home" class="w-full py-4 hidden lg:block">
      <ul class="flex gap-8 justify-center text-lg">
        {MENU_ITEMS.map(({ label, link }) => (
          <li><a href={link}>{label}</a></li>
        ))}
      </ul>
    </nav>
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html, body {
    min-height: 100%;
  }

  html {
    font-family: 'Poppins', sans-serif;
    scroll-behavior: smooth;
  }

